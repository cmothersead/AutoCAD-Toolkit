<UserControl x:Class="ICA.Schematic.Components.EditWindowControls.TagControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d">
    <GroupBox Header="Tag">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="32"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="Tag_TextBox" Height="28" VerticalContentAlignment="Center" Margin="2" Grid.Column="0" IsEnabled="False"/>
            <CheckBox Content="Manual" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="2" Padding="2" Grid.Column="1" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="0.75" ScaleY="0.75"/>
                </CheckBox.LayoutTransform>
            </CheckBox>
            <Button Margin="2" Grid.Column="2">
                <Button.Content>
                    <fa:FontAwesome Icon="Cog" Foreground="DimGray"/>
                </Button.Content>
            </Button>
        </Grid>
    </GroupBox>
</UserControl>
